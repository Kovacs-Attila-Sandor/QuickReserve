<Shell
    x:Class="QuickReserve.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuickReserve.Views"
    Title="QuickReserve">

    <Shell.Resources>
        <ResourceDictionary />
    </Shell.Resources>

    <!--  TabBar Navigáció  -->
    <TabBar>
        <ShellContent Title="Home" Icon="home_icon.png" ContentTemplate="{DataTemplate local:AboutPage}" />
        <ShellContent Title="Profile" Icon="profile_icon.png" ContentTemplate="{DataTemplate local:UserProfilePage}" />
        <ShellContent Title="Reservations" Icon="reservation_icon.png" ContentTemplate="{DataTemplate local:UserReservationsPage}" />
    </TabBar>
</Shell>
