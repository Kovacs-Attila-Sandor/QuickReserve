<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickReserve.Views.UserProfilePage"
             BackgroundColor="#f5f5f5"
             Title="Profile">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            

            <!-- Profile Picture -->
            <Frame HasShadow="True" CornerRadius="60" Padding="0" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="160">
                <Image Source="{Binding User.ProfileImageSource}"
                       Aspect="AspectFill"
                       WidthRequest="160"
                       HeightRequest="160" />
            </Frame>

            <!-- User Information Card -->
            <Frame BackgroundColor="White" CornerRadius="20" Padding="20" HasShadow="True" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                <StackLayout Spacing="15">
                    <!-- Name -->
                    <Label Text="{Binding User.Name}" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#2c3e50" 
                           HorizontalOptions="Center" />

                    <!-- Email -->
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="Email:" 
                               FontSize="20" 
                               TextColor="#7f8c8d" 
                               FontAttributes="Bold" />
                        <Label Text="{Binding User.Email}" 
                               FontSize="20" 
                               TextColor="#34495e" />
                    </StackLayout>

                    <!-- Phone Number -->
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="Phone:" 
                               FontSize="20" 
                               TextColor="#7f8c8d" 
                               FontAttributes="Bold" />
                        <Label Text="{Binding User.PhoneNumber}" 
                               FontSize="20" 
                               TextColor="#34495e" />
                    </StackLayout>

                    <!-- Role -->
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="Role:" 
                               FontSize="20" 
                               TextColor="#7f8c8d" 
                               FontAttributes="Bold" />
                        <Label Text="{Binding User.Role}" 
                               FontSize="20" 
                               TextColor="#34495e" />
                    </StackLayout>

                    <!-- Created At -->
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="Member Since:" 
                               FontSize="20" 
                               TextColor="#7f8c8d" 
                               FontAttributes="Bold" />
                        <Label Text="{Binding User.CreatedAt}" 
                               FontSize="20" 
                               TextColor="#34495e" />
                    </StackLayout>
                    
                    <!-- Edit Profile Button -->
                    <Button Text="Edit Profile"
                            FontSize="20"
                            TextColor="White"
                            BackgroundColor="#2980b9"
                            CornerRadius="30"
                            HorizontalOptions="Center" 
                            WidthRequest="250"
                            Padding="10" />
                    
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
