<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    x:Class="QuickReserve.Views.PopUps.ReservationDetailsPopup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    BackgroundColor="#1A1A1A">
    <pages:PopupPage.Content>
        <Grid Padding="20" RowDefinitions="Auto, *, Auto">
            <StackLayout Grid.Row="0" Spacing="10">
                <Label
                    Margin="0,0,0,10"
                    FontAttributes="Bold"
                    FontFamily="Roboto"
                    FontSize="22"
                    HorizontalOptions="Center"
                    Text="Reservation Details"
                    TextColor="#E0E0E0" />
            </StackLayout>

            <ScrollView Grid.Row="1" Padding="10">
                <StackLayout x:Name="ContentStack" Spacing="10">
                    <Frame
                        Padding="12"
                        BackgroundColor="#2A2A2A"
                        CornerRadius="10"
                        HasShadow="True">
                        <StackLayout Spacing="8">
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="Table Number:"
                                TextColor="#B0BEC5" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="{Binding TableNumber}"
                                TextColor="#FFFFFF" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="Reservation Date:"
                                TextColor="#B0BEC5" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="{Binding ReservationDateTime}"
                                TextColor="#FFFFFF" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="Number of Guests:"
                                TextColor="#B0BEC5" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="{Binding GuestCount}"
                                TextColor="#FFFFFF" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="Status:"
                                TextColor="#B0BEC5" />
                            <Label
                                FontFamily="Roboto"
                                FontSize="14"
                                Text="{Binding Status}"
                                TextColor="#FFFFFF" />
                            <Label
                                x:Name="FoodsLabel"
                                FontAttributes="Bold"
                                FontFamily="Roboto"
                                FontSize="14"
                                IsVisible="{Binding HasFoods, Source={RelativeSource AncestorType={x:Type pages:PopupPage}}}"
                                Text="Ordered Foods:"
                                TextColor="#B0BEC5" />
                            <CollectionView
                                x:Name="FoodCollectionView"
                                BackgroundColor="Transparent"
                                IsVisible="{Binding HasFoods, Source={RelativeSource AncestorType={x:Type pages:PopupPage}}}"
                                ItemsSource="{Binding FoodDetails, Source={RelativeSource AncestorType={x:Type pages:PopupPage}}}"
                                SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Margin="0,2,0,2"
                                            Padding="10"
                                            BackgroundColor="#333333"
                                            CornerRadius="8"
                                            HasShadow="False">
                                            <StackLayout Orientation="Horizontal" Spacing="10">
                                                <Label
                                                    FontFamily="Roboto"
                                                    FontSize="13"
                                                    LineBreakMode="WordWrap"
                                                    MaxLines="2"
                                                    Text="{Binding Name}"
                                                    TextColor="#FFFFFF"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontFamily="Roboto"
                                                    FontSize="13"
                                                    HorizontalOptions="EndAndExpand"
                                                    Text="{Binding Quantity, StringFormat='x{0}'}"
                                                    TextColor="#B0BEC5"
                                                    VerticalOptions="Center" />
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>

            <StackLayout
                Grid.Row="2"
                Spacing="10"
                VerticalOptions="End">
                <!--  Mark As Done Button  -->
                <Button
                    x:Name="MarkAsDoneButton"
                    Margin="0,0,0,0"
                    BackgroundColor="#1abc9c"
                    BorderWidth="0"
                    Clicked="OnMarkAsDoneButtonClicked"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    FontFamily="Roboto"
                    FontSize="14"
                    HeightRequest="50"
                    Text="Mark as Done"
                    TextColor="White"
                    TextTransform="Uppercase">
                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                            <Setter Property="BackgroundColor" Value="#95a5a6" />
                            <Setter Property="TextColor" Value="#d3d3d3" />
                        </Trigger>
                    </Button.Triggers>
                </Button>

                <!--  Close Button  -->
                <Button
                    Margin="0,0,0,0"
                    BackgroundColor="#e74c3c"
                    BorderWidth="0"
                    Clicked="OnCloseButtonClicked"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    FontFamily="Roboto"
                    FontSize="14"
                    HeightRequest="50"
                    Text="Close"
                    TextColor="White"
                    TextTransform="Uppercase" />
            </StackLayout>

            <!--  Activity Indicator  -->
            <ActivityIndicator
                x:Name="LoadingIndicator"
                Grid.RowSpan="3"
                HorizontalOptions="Center"
                IsRunning="False"
                IsVisible="False"
                VerticalOptions="Center"
                Color="#1abc9c" />
        </Grid>
    </pages:PopupPage.Content>
</pages:PopupPage>