<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickReserve.Views.RestaurantProfilePage">
    <ContentPage.ToolbarItems>
        <!-- Back Button -->
        <ToolbarItem Text="Back" 
                     IconImageSource="back_icon.png" 
                     Order="Primary" 
                     Clicked="OnBackClicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView Padding="20">
            <StackLayout Spacing="15">

                <!-- Restaurant Image -->
                <Image Source="{Binding FirstImageBase64}" 
                       Aspect="AspectFill" 
                       HeightRequest="250" 
                       HorizontalOptions="FillAndExpand" 
                       Margin="0,0,0,10" />

                <!-- Restaurant Name -->
                <Label Text="{Binding Name}" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="Black" />

                <!-- Restaurant Address -->
                <Label Text="{Binding Address.FullAddress}" 
                       FontSize="18" 
                       TextColor="Gray" 
                       HorizontalOptions="Center" 
                       Margin="0,5" />

                <!-- Restaurant Contact Information -->
                <StackLayout Spacing="10">
                    <Label Text="Contact Information" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="Black" />

                    <Label Text="Phone Number:" 
                           FontSize="16" 
                           TextColor="Gray" />
                    <Label Text="{Binding PhoneNumber}" 
                           FontSize="16" 
                           TextColor="Black" />

                    <Label Text="Email:" 
                           FontSize="16" 
                           TextColor="Gray" />
                    <Label Text="{Binding Email}" 
                           FontSize="16" 
                           TextColor="Black" />

                    <Label Text="Website:" 
                           FontSize="16" 
                           TextColor="Gray" />
                    <Label Text="{Binding Website}" 
                           FontSize="16" 
                           TextColor="Black" />
                </StackLayout>

                <!-- Restaurant Details -->
                <StackLayout Spacing="10">
                    <Label Text="Restaurant Type:" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black" />
                    <Label Text="{Binding RestaurantType}" 
                           FontSize="16" 
                           TextColor="Gray" />

                    <Label Text="Rating:" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black" />
                    <Label Text="{Binding Rating}" 
                           FontSize="16" 
                           TextColor="Gray" />
                </StackLayout>

                <!-- Restaurant Descriptions -->
                <StackLayout Spacing="10">
                    <Label Text="Short Description:" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black" />
                    <Label Text="{Binding ShortDescription}" 
                           FontSize="16" 
                           TextColor="Black" />

                    <Label Text="Long Description:" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black" />
                    <Label Text="{Binding LongDescription}" 
                           FontSize="16" 
                           TextColor="Black" />
                </StackLayout>

                <!-- Restaurant Available Foods -->
                <Label Text="Available Foods:" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="Black" />
                <ListView ItemsSource="{Binding Foods}" 
                          Margin="0,10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}" 
                                      Detail="{Binding Description}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Restaurant Available Tables -->
                <Label Text="Available Tables:" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="Black" />
                <ListView ItemsSource="{Binding Tables}" 
                          Margin="0,10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding TableNumber}" 
                                      Detail="{Binding SeatsCount}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
