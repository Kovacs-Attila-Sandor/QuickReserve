<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.ApplicationViews.FoodPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuickReserve.Views.ApplicationViews"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <local:BoolToAvailabilityConverter x:Key="BoolToAvailabilityConverter" />
        <local:ListToStringConverter x:Key="ListToStringConverter" />
        <local:PriceConverter x:Key="PriceConverter" />
        <local:PreparationTimeConverter x:Key="PreparationTimeConverter" />
        <local:RatingConverter x:Key="RatingConverter" />
        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="#FFFFFF" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style x:Key="SectionContent" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="#D0D0D0" />
            <Setter Property="LineBreakMode" Value="WordWrap" />
        </Style>
    </ContentPage.Resources>

    <Grid>
        <!--  Görgethető tartalom  -->
        <ScrollView Grid.Row="0">
            <Grid RowDefinitions="Auto,*">
                <Grid Grid.Row="0">
                    <!--  Kép  -->
                    <Image
                        Margin="0"
                        Aspect="AspectFill"
                        HeightRequest="280"
                        Source="{Binding ImageSource}" />

                    <!--  Gombok  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Vissza gomb (bal felső sarok)  -->
                        <ImageButton
                            Grid.Column="0"
                            Margin="25,25,0,0"
                            BackgroundColor="Transparent"
                            Clicked="OnBackButtonClicked"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            Source="back_icon_arrow.png"
                            VerticalOptions="Start" />

                        <!--  Étterem gomb (középen)  -->
                        <Button
                            x:Name="seeRestaurantButton"
                            Grid.Column="1"
                            Margin="0,25,0,0"
                            Padding="15,10"
                            BackgroundColor="#2D2D2D"
                            Clicked="OnRestaurantButtonClicked"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            FontSize="16"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            MinimumWidthRequest="150"
                            Text="Go To Restaurant"
                            TextColor="#FFFFFF"
                            VerticalOptions="Start" />

                        <!--  Szív gomb (jobb felső sarok)  -->
                        <ImageButton
                            x:Name="heartButton"
                            Grid.Column="2"
                            Margin="0,25,25,0"
                            BackgroundColor="Transparent"
                            Clicked="OnHeartButtonClicked"
                            HeightRequest="45"
                            HorizontalOptions="End"
                            Source="heart_not_filled_icon.png"
                            VerticalOptions="Start" />
                    </Grid>
                </Grid>
                <Frame
                    Grid.Row="1"
                    Padding="0"
                    BackgroundColor="#2D2D2D"
                    CornerRadius="15"
                    TranslationY="-25">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0.0" Color="#1A1A1A" />
                            <GradientStop Offset="0.3" Color="#2D2D2D" />
                            <GradientStop Offset="0.6" Color="#4A4A4A" />
                            <GradientStop Offset="1.0" Color="#6A6A6A" />
                        </LinearGradientBrush>
                    </Frame.Background>

                    <StackLayout Margin="15,10">
                        <!--  Csillagos értékelés  -->

                        <StackLayout
                            Orientation="Horizontal"
                            Spacing="10"
                            VerticalOptions="Center">
                            <Label
                                Margin="0"
                                FontAttributes="Bold"
                                FontSize="28"
                                Text="{Binding Name}"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <StackLayout
                                Margin="0,5,0,0"
                                Orientation="Horizontal"
                                Spacing="4"
                                VerticalOptions="Center">
                                <Image
                                    HeightRequest="18"
                                    Source="star_filled.png"
                                    VerticalOptions="Center" />
                                <Label
                                    FontSize="18"
                                    Text="{Binding Rating, Converter={StaticResource RatingConverter}}"
                                    TextColor="#FFD700"
                                    VerticalOptions="Center" />
                            </StackLayout>

                        </StackLayout>
                        <!--  Leírás  -->

                        <StackLayout Spacing="5">
                            <StackLayout Padding="0" Orientation="Horizontal">
                                <Label
                                    Margin="0"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="{Binding Price, Converter={StaticResource PriceConverter}}"
                                    TextColor="#FFD700"
                                    VerticalOptions="Center" />
                                <Label
                                    Margin="0"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="{Binding Weight, StringFormat='- {0} gram'}"
                                    TextColor="#FFD700"
                                    VerticalOptions="Center" />
                            </StackLayout>
                            <!--  Rövidített leírás "Read more"-ral  -->
                            <Label
                                x:Name="descriptionLabel"
                                Margin="0,10,0,0"
                                FontSize="16"
                                LineBreakMode="TailTruncation"
                                MaxLines="3"
                                TextColor="#E0E0E0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnReadMoreTapped" />
                                </Label.GestureRecognizers>
                            </Label>

                            <!--  Teljes leírás, alapértelmezésként rejtett  -->
                            <Label
                                x:Name="fullDescriptionLabel"
                                Margin="0,10,0,0"
                                FontSize="16"
                                IsVisible="False"
                                Text="{Binding Description}"
                                TextColor="#E0E0E0" />
                        </StackLayout>
                        <StackLayout Margin="0,15,0,0" Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Center"
                                Text="Calories:"
                                VerticalOptions="Center" />
                            <Image
                                BackgroundColor="Transparent"
                                HeightRequest="15"
                                Source="calories_icon"
                                TranslationY="1" />
                            <Label
                                HorizontalOptions="Center"
                                Text="{Binding Calories}"
                                TranslationY="1"
                                VerticalOptions="Center" />
                            <Label
                                FontSize="16"
                                HorizontalOptions="Center"
                                Text="|"
                                VerticalOptions="Center" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Center"
                                Text="Time:"
                                TranslationY="1"
                                VerticalOptions="Center" />
                            <Image
                                BackgroundColor="Transparent"
                                HeightRequest="15"
                                HorizontalOptions="Center"
                                Source="time_icon"
                                TranslationY="1" />
                            <Label
                                FontSize="16"
                                HorizontalOptions="Center"
                                Text="{Binding PreparationTime, StringFormat='{0} min'}"
                                TranslationY="1" />
                        </StackLayout>

                        <Label
                            Margin="0,20,0,0"
                            FontAttributes="Bold"
                            FontSize="24"
                            Text="Ingredients"
                            TextColor="white" />

                        <Label Style="{StaticResource SectionContent}" Text="{Binding Ingredients, Converter={StaticResource ListToStringConverter}}" />

                        <Label
                            Margin="0,20,0,0"
                            FontAttributes="Bold"
                            FontSize="24"
                            Text="Allergens"
                            TextColor="white" />
                        <StackLayout
                            BindableLayout.ItemsSource="{Binding Allergens}"
                            Orientation="Horizontal"
                            Spacing="10">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                                        Margin="0,0,5,0"
                                        Padding="10,5"
                                        BackgroundColor="Gray"
                                        CornerRadius="15">
                                        <Label
                                            FontSize="14"
                                            Text="{Binding .}"
                                            TextColor="White" />
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                        <Label
                            Margin="0,20,0,0"
                            FontAttributes="Bold"
                            FontSize="24"
                            Text="Tags"
                            TextColor="white" />
                        <StackLayout
                            BindableLayout.ItemsSource="{Binding Tags}"
                            Orientation="Horizontal"
                            Spacing="10">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                                        Margin="0,0,5,0"
                                        Padding="10,5"
                                        BackgroundColor="Gray"
                                        CornerRadius="15">
                                        <Label
                                            FontSize="14"
                                            Text="{Binding .}"
                                            TextColor="White" />
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                        <!--  Részletek  -->
                        <StackLayout Margin="0,20,0,0" Spacing="15">

                            <StackLayout
                                HorizontalOptions="Center"
                                Orientation="Horizontal"
                                Spacing="12">
                                <ImageButton
                                    x:Name="star1"
                                    BackgroundColor="Transparent"
                                    Clicked="OnStarClicked"
                                    CommandParameter="1"
                                    HeightRequest="40"
                                    Source="star_empty.png"
                                    WidthRequest="40" />
                                <ImageButton
                                    x:Name="star2"
                                    BackgroundColor="Transparent"
                                    Clicked="OnStarClicked"
                                    CommandParameter="2"
                                    HeightRequest="40"
                                    Source="star_empty.png"
                                    WidthRequest="40" />
                                <ImageButton
                                    x:Name="star3"
                                    BackgroundColor="Transparent"
                                    Clicked="OnStarClicked"
                                    CommandParameter="3"
                                    HeightRequest="40"
                                    Source="star_empty.png"
                                    WidthRequest="40" />
                                <ImageButton
                                    x:Name="star4"
                                    BackgroundColor="Transparent"
                                    Clicked="OnStarClicked"
                                    CommandParameter="4"
                                    HeightRequest="40"
                                    Source="star_empty.png"
                                    WidthRequest="40" />
                                <ImageButton
                                    x:Name="star5"
                                    BackgroundColor="Transparent"
                                    Clicked="OnStarClicked"
                                    CommandParameter="5"
                                    HeightRequest="40"
                                    Source="star_empty.png"
                                    WidthRequest="40" />
                            </StackLayout>
                            <Button
                                x:Name="submitButton"
                                Padding="15,10"
                                BackgroundColor="#6200EE"
                                Clicked="OnSubmitRatingClicked"
                                CornerRadius="12"
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Center"
                                Text="Add Rating"
                                TextColor="White" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>