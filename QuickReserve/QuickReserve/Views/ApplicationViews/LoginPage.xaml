<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="#121212"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Content>
        <Grid x:Name="MainGrid" Padding="20">

            <!-- Gradient Background -->
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#121212" Offset="0" />
                    <GradientStop Color="#282828" Offset="0.5" />
                    <GradientStop Color="#3f3f3f" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!--  Cím  -->
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Spacing="25"
                VerticalOptions="CenterAndExpand">
                <Label
                    Margin="0,30,0,40"
                    FontAttributes="Bold"
                    FontSize="28"
                    HorizontalOptions="Center"
                    Text="Welcome to Quick Reserve"
                    TextColor="#F0F0F0" />

                <!--  Bejelentkezés Frame  -->
                <Frame
                    Padding="25"                 
                    CornerRadius="20"
                    HasShadow="True">
                    <Frame.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="#3d3d3d" Offset="0" />
                            <GradientStop Color="#262626" Offset="0.5" />
                            <GradientStop Color="#100f10" Offset="1" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    <StackLayout Spacing="20" VerticalOptions="CenterAndExpand">

                        <!--  Email mező  -->
                        <Frame
                            Padding="5"
                            BackgroundColor="#2C2C2C"
                            CornerRadius="12"
                            HasShadow="False">

                            <Grid Padding="7" ColumnDefinitions="Auto, *">
                                <Image
                                    BackgroundColor="Transparent"
                                    HeightRequest="30"
                                    Source="email_icon.png"
                                    VerticalOptions="Center"
                                    WidthRequest="30" />
                                <Entry
                                    x:Name="txtEmail"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    Placeholder="Email"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Grid>
                        </Frame>

                        <!--  Jelszó mező  -->
                        <Frame
                            Padding="5"
                            BackgroundColor="#2C2C2C"
                            CornerRadius="12"
                            HasShadow="False">
                            <Grid Padding="7" ColumnDefinitions="Auto, *, Auto">
                                <Image
                                    HeightRequest="30"
                                    Source="password_icon.jpg"
                                    VerticalOptions="Center"
                                    WidthRequest="30" />
                                <Entry
                                    x:Name="txtPassword"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    IsPassword="True"
                                    Placeholder="Password"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                                <Image
                                    x:Name="imgTogglePassword"
                                    Grid.Column="2"
                                    HeightRequest="30"
                                    Source="eye_closed.png"
                                    VerticalOptions="Center"
                                    WidthRequest="30">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TogglePasswordVisibility" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </Frame>

                        <!--  Remember me checkbox  -->
                        <StackLayout HorizontalOptions="Start" Orientation="Horizontal">
                            <CheckBox x:Name="chkRememberMe" Color="#6200EE" />
                            <Label
                                Margin="5,0,0,0"
                                Text="Remember Me"
                                TextColor="#E0E0E0"
                                VerticalOptions="Center" />
                        </StackLayout>

                        <!--  Login Button  -->
                        <Button
                            Margin="0,10"
                            BackgroundColor="#6200EE"
                            Clicked="Login"
                            CornerRadius="30"
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="Login"
                            TextColor="#FFFFFF"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="350" />

                        <!--  További regisztrációs gombok  -->
                        <Button
                            Margin="0,5"
                            BackgroundColor="#444444"
                            Clicked="GoToUserRegisterPage"
                            CornerRadius="30"
                            FontAttributes="Bold"
                            FontSize="16"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            Text="Register as guest"
                            TextColor="#FFFFFF"
                            WidthRequest="350" />

                        <Button
                            Margin="0,5"
                            BackgroundColor="#444444"
                            Clicked="GoToRestaurantRegisterPage"
                            CornerRadius="30"
                            FontAttributes="Bold"
                            FontSize="16"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            Text="Register as restaurant"
                            TextColor="#FFFFFF"
                            WidthRequest="350" />

                    </StackLayout>
                </Frame>
            </StackLayout>

            <!--  Overlay a betöltéshez  -->
            <Grid
                x:Name="LoadingOverlay"
                BackgroundColor="Black"
                HorizontalOptions="FillAndExpand"
                IsVisible="False"
                Opacity="0.5"
                VerticalOptions="FillAndExpand">
                <!--  Activity Indicator  -->
                <ActivityIndicator
                    HorizontalOptions="Center"
                    IsRunning="True"
                    VerticalOptions="CenterAndExpand"
                    Color="White" />
            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>
