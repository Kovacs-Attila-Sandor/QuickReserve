<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainPage"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">

    <ContentPage.Content>
        <AbsoluteLayout>

            <!--  Fő tartalom Grid  -->
            <Grid
                Padding="20"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All">

                <!--  Gradient háttér  -->
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#121212" />
                        <GradientStop Offset="0.5" Color="#282828" />
                        <GradientStop Offset="1" Color="#3f3f3f" />
                    </LinearGradientBrush>
                </Grid.Background>

                <!--  Bejelentkezési UI  -->
                <StackLayout
                    HorizontalOptions="FillAndExpand"
                    Spacing="25"
                    VerticalOptions="CenterAndExpand">
                    <Label
                        Margin="0,30,0,40"
                        FontAttributes="Bold"
                        FontSize="28"
                        HorizontalOptions="Center"
                        Text="Welcome to Quick Reserve"
                        TextColor="#F0F0F0" />

                    <!--  Bejelentkezési keret  -->
                    <Frame
                        Padding="25"
                        CornerRadius="20"
                        HasShadow="True">
                        <Frame.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0" Color="#3d3d3d" />
                                <GradientStop Offset="0.5" Color="#262626" />
                                <GradientStop Offset="1" Color="#100f10" />
                            </LinearGradientBrush>
                        </Frame.Background>

                        <StackLayout Spacing="20" VerticalOptions="CenterAndExpand">
                            <!--  Email mező  -->
                            <Frame
                                Padding="5"
                                BackgroundColor="#2C2C2C"
                                CornerRadius="12"
                                HasShadow="False">
                                <Grid
                                    Padding="7"
                                    ColumnDefinitions="Auto, *"
                                    RowDefinitions="Auto, Auto">
                                    <!--  Lebegő Placeholder Label (alapból elrejtve)  -->
                                    <Label
                                        x:Name="lblEmailPlaceholder"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="12"
                                        IsVisible="False"
                                        Opacity="0"
                                        Text="Email"
                                        TextColor="#A0A0A0"
                                        TranslationX="2"
                                        TranslationY="-7" />

                                    <Image
                                        Grid.Row="1"
                                        HeightRequest="30"
                                        Source="email_icon.png"
                                        VerticalOptions="Center"
                                        WidthRequest="30" />

                                    <Entry
                                        x:Name="txtEmail"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        BackgroundColor="Transparent"
                                        Focused="OnFocused"
                                        Keyboard="Email"
                                        Placeholder="Email"
                                        PlaceholderColor="#A0A0A0"
                                        TextChanged="OnTextChanged"
                                        TextColor="#FFFFFF"
                                        Unfocused="OnUnfocused" />
                                </Grid>
                            </Frame>

                            <!--  Jelszó mező  -->
                            <Frame
                                Padding="5"
                                BackgroundColor="#2C2C2C"
                                CornerRadius="12"
                                HasShadow="False">
                                <Grid
                                    Padding="7"
                                    ColumnDefinitions="Auto, *, Auto"
                                    RowDefinitions="Auto, Auto">
                                    <!--  Lebegő Placeholder Label (alapból elrejtve)  -->
                                    <Label
                                        x:Name="lblPasswordPlaceholder"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="12"
                                        IsVisible="False"
                                        Opacity="0"
                                        Text="Password"
                                        TextColor="#A0A0A0"
                                        TranslationX="2"
                                        TranslationY="-7" />

                                    <Image
                                        Grid.Row="1"
                                        HeightRequest="30"
                                        Source="password_icon.jpg"
                                        VerticalOptions="Center"
                                        WidthRequest="30" />

                                    <Entry
                                        x:Name="txtPassword"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        BackgroundColor="Transparent"
                                        Focused="OnFocused"
                                        IsPassword="True"
                                        Placeholder="Password"
                                        PlaceholderColor="#A0A0A0"
                                        TextChanged="OnTextChanged"
                                        TextColor="#FFFFFF"
                                        Unfocused="OnUnfocused" />

                                    <Image
                                        x:Name="imgTogglePassword"
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        HeightRequest="30"
                                        Source="eye_closed.png"
                                        VerticalOptions="Center"
                                        WidthRequest="30">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TogglePasswordVisibility" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Grid>
                            </Frame>


                            <!--  Remember me checkbox  -->
                            <StackLayout HorizontalOptions="Start" Orientation="Horizontal">
                                <CheckBox x:Name="chkRememberMe" Color="#6200EE" />
                                <Label
                                    Margin="5,0,0,0"
                                    Text="Remember Me"
                                    TextColor="#E0E0E0"
                                    VerticalOptions="Center" />
                            </StackLayout>

                            <!--  Login Button  -->
                            <Button
                                Margin="0,10"
                                BackgroundColor="#6200EE"
                                Clicked="Login"
                                CornerRadius="30"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="Login"
                                TextColor="#FFFFFF"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="350" />

                            <!--  Regisztrációs gombok  -->
                            <Button
                                Margin="0,5"
                                BackgroundColor="#444444"
                                Clicked="GoToUserRegisterPage"
                                CornerRadius="30"
                                FontAttributes="Bold"
                                FontSize="16"
                                HeightRequest="50"
                                HorizontalOptions="Center"
                                Text="Register as guest"
                                TextColor="#FFFFFF"
                                WidthRequest="350" />

                            <Button
                                Margin="0,5"
                                BackgroundColor="#444444"
                                Clicked="GoToRestaurantRegisterPage"
                                CornerRadius="30"
                                FontAttributes="Bold"
                                FontSize="16"
                                HeightRequest="50"
                                HorizontalOptions="Center"
                                Text="Register as restaurant"
                                TextColor="#FFFFFF"
                                WidthRequest="350" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Grid>

            <!--  Betöltési overlay (AbsoluteLayout miatt külön kell kezelni)  -->
            <ContentView
                x:Name="LoadingOverlay"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                BackgroundColor="Black"
                IsVisible="False"
                Opacity="0.5">

                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <ActivityIndicator
                        x:Name="LoadingIndicator"
                        HeightRequest="60"
                        IsRunning="True"
                        WidthRequest="60"
                        Color="White" />

                </StackLayout>
            </ContentView>


        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>
