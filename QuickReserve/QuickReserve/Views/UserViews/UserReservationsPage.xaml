<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.UserReservationsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Reservations"
    BackgroundColor="#2d3436">

    <!--  Background Gradient  -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#1A1A1A" />
            <GradientStop Offset="1.0" Color="#2D2D2D" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <ScrollView Padding="15">
            <StackLayout Spacing="20">

                <!--  Header  -->
                <Label
                    Margin="0,10,0,20"
                    FontAttributes="Bold"
                    FontSize="28"
                    HorizontalOptions="Center"
                    Text="Reservations"
                    TextColor="#ecf0f1" />

                <!--  Toggle Button  -->
                <Button
                    Padding="10"
                    BackgroundColor="#1abc9c"
                    BorderWidth="0"
                    Clicked="OnViewDoneReservationsClicked"
                    CornerRadius="25"
                    FontSize="14"
                    HorizontalOptions="FillAndExpand"
                    Text="View Done Reservations"
                    TextColor="White" />

                <!--  Reservation List  -->
                <ListView
                    x:Name="ReservationsListView"
                    Margin="0,0,0,10"
                    BackgroundColor="Transparent"
                    HasUnevenRows="True"
                    ItemsSource="{Binding Reservations}"
                    SelectionMode="None"
                    SeparatorVisibility="None">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame
                                    Margin="0,10"
                                    Padding="20"
                                    BackgroundColor="#34495e"
                                    CornerRadius="15"
                                    HasShadow="True"
                                    HorizontalOptions="FillAndExpand">

                                    <StackLayout Spacing="15">

                                        <!--  Main Reservation Info  -->
                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <!--  Date Column  -->
                                            <StackLayout HorizontalOptions="StartAndExpand" Spacing="5">
                                                <Label
                                                    FontSize="12"
                                                    Text="DATE"
                                                    TextColor="#bdc3c7" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding ReservationDateTime, StringFormat='{0:dd MMM yyyy}'}"
                                                    TextColor="#ecf0f1" />
                                            </StackLayout>

                                            <!--  Guests Column  -->
                                            <StackLayout HorizontalOptions="CenterAndExpand" Spacing="5">
                                                <Label
                                                    FontSize="12"
                                                    Text="GUESTS"
                                                    TextColor="#bdc3c7" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding GuestCount}"
                                                    TextColor="#ecf0f1" />
                                            </StackLayout>

                                            <!--  Table Column  -->
                                            <StackLayout HorizontalOptions="EndAndExpand" Spacing="5">
                                                <Label
                                                    FontSize="12"
                                                    Text="TABLE"
                                                    TextColor="#bdc3c7" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    HorizontalOptions="End"
                                                    Text="{Binding TableNumber}"
                                                    TextColor="#ecf0f1" />
                                            </StackLayout>
                                        </StackLayout>

                                        <!--  View Details Button  -->
                                        <Button
                                            Padding="10"
                                            BackgroundColor="#1abc9c"
                                            BorderWidth="0"
                                            Clicked="OnViewReservationDetailsClicked"
                                            CornerRadius="25"
                                            FontSize="14"
                                            HorizontalOptions="FillAndExpand"
                                            Text="View Reservation Details"
                                            TextColor="White" />
                                    </StackLayout>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>

        <!--  Loading Indicator  -->
        <ActivityIndicator
            Grid.RowSpan="1"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center"
            Color="#1abc9c" />
    </Grid>
</ContentPage>