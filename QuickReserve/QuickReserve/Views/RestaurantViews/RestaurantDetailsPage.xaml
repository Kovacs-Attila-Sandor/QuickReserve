<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.RestaurantDetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    BackgroundColor="#eef2f3"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <RelativeLayout>

            <!-- Background image with slight blur effect for aesthetics -->
            <Image
                Aspect="AspectFill"
                IsEnabled="False"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                       Property=Height,
                                                                       Factor=1}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                      Property=Width,
                                                                      Factor=1}"
                Source="background1.png" />

            <!-- Main content -->
            <StackLayout
                Margin="30,30,30,30"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                       Property=Height,
                                                                       Factor=1}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                      Property=Width,
                                                                      Factor=1}">

                <!-- Profile button with modern design -->
                <Button
                    BackgroundColor="Transparent"
                    BorderColor="GhostWhite"
                    BorderWidth="2"
                    Clicked="GoToAboutpage"
                    CornerRadius="50"
                    FontAttributes="Bold"
                    FontSize="14"
                    HorizontalOptions="StartAndExpand"
                    Text="Back"
                    TextColor="GhostWhite"
                    VerticalOptions="StartAndExpand" />

                <!-- ScrollView to handle content overflow -->
                <ScrollView>

                    <!-- Stylish frame for restaurant details -->
                    <Frame
                        Margin="10"
                        Padding="15"
                        BackgroundColor="Black"
                        CornerRadius="20"
                        HasShadow="True"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.85"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            Padding="20"
                            HorizontalOptions="CenterAndExpand"
                            Orientation="Vertical"
                            Spacing="20"
                            VerticalOptions="CenterAndExpand">

                            <!-- Image Carousel -->
                            <CarouselView
                                x:Name="ImageCarousel"
                                Margin="0,0,0,10"
                                HeightRequest="250"
                                ItemsSource="{Binding ImageSourceList}">
                                <CarouselView.ItemTemplate>
                                    <DataTemplate>
                                        <Image
                                            Aspect="AspectFill"
                                            HorizontalOptions="FillAndExpand"
                                            Source="{Binding .}"
                                            VerticalOptions="FillAndExpand" />
                                    </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>

                            <!-- Restaurant Name -->
                            <Label
                                Margin="0,10"
                                FontAttributes="Bold"
                                FontSize="32"
                                HorizontalOptions="Center"
                                Text="{Binding Name}"
                                TextColor="GhostWhite" />

                            <!-- Location Section -->
                            <StackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Location"
                                    TextColor="White" />

                                <StackLayout Padding="5">
                                    <Image
                                        HeightRequest="20"
                                        Source="location_icon.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />

                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="Country:"
                                        TextColor="White" />
                                    <Label
                                        FontSize="16"
                                        Text="{Binding Address.Country}"
                                        TextColor="LightGray" />

                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="City:"
                                        TextColor="White" />
                                    <Label
                                        FontSize="16"
                                        Text="{Binding Address.City}"
                                        TextColor="LightGray" />

                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="Street:"
                                        TextColor="White" />
                                    <Label
                                        FontSize="16"
                                        Text="{Binding Address.Street}"
                                        TextColor="LightGray" />

                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="Number:"
                                        TextColor="White" />
                                    <Label
                                        FontSize="16"
                                        Text="{Binding Address.Number}"
                                        TextColor="LightGray" />
                                </StackLayout>
                            </StackLayout>

                            <!-- Restaurant Description -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="Description"
                                TextColor="White" />
                            <Label
                                FontSize="14"
                                LineBreakMode="WordWrap"
                                Text="{Binding LongDescription}"
                                TextColor="GhostWhite" />

                            <!-- Buttons -->
                            <Button
                                Margin="10"
                                Padding="15"
                                BackgroundColor="#4CAF50"
                                BorderColor="White"
                                BorderWidth="2"
                                Clicked="GoToRestaurantLayoutpage"
                                CornerRadius="25"
                                FontSize="18"
                                HorizontalOptions="FillAndExpand"
                                Text="Book a Table"
                                TextColor="White"
                                VerticalOptions="EndAndExpand" />

                            <Button
                                Margin="10"
                                Padding="15"
                                BackgroundColor="#2196F3"
                                BorderColor="White"
                                BorderWidth="2"
                                Clicked="GoToMenuPage"
                                CornerRadius="25"
                                FontSize="18"
                                HorizontalOptions="FillAndExpand"
                                Text="View Menu"
                                TextColor="White"
                                VerticalOptions="EndAndExpand" />
                        </StackLayout>
                    </Frame>
                </ScrollView>
            </StackLayout>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>
