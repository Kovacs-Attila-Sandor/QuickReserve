<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.RestaurantDetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:QuickReserve.Converter"
    x:Name="this"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#1A1A1A" />
            <GradientStop Offset="1.0" Color="#2D2D2D" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:IsPositiveConverter x:Key="IsPositiveConverter" />
            <Color x:Key="PrimaryColor">#BB86FC</Color>
            <Color x:Key="SecondaryTextColor">#B0B0B0</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <RefreshView x:Name="myRefreshView" Refreshing="RefreshView_Refreshing">
            <ScrollView
                x:Name="mainScrollView"
                Margin="0"
                Padding="0">
                <StackLayout Padding="0" Spacing="0">
                    <Grid
                        Margin="0"
                        Padding="0"
                        BackgroundColor="Transparent"
                        ColumnDefinitions="Auto"
                        RowDefinitions="Auto">
                        <StackLayout
                            Padding="0"
                            HorizontalOptions="FillAndExpand"
                            Spacing="10"
                            VerticalOptions="CenterAndExpand">
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                CornerRadius="10"
                                HasShadow="True"
                                HorizontalOptions="FillAndExpand">
                                <Grid
                                    Margin="0"
                                    RowDefinitions="Auto"
                                    RowSpacing="0">
                                    <Grid
                                        Grid.Row="0"
                                        Margin="0"
                                        ColumnDefinitions="Auto, *"
                                        HorizontalOptions="FillAndExpand"
                                        RowDefinitions="Auto">
                                        <ImageButton
                                            BackgroundColor="Transparent"
                                            Clicked="OnBackButtonClicked"
                                            Source="back_icon.png"
                                            WidthRequest="40" />
                                        <Grid
                                            Grid.Column="1"
                                            Padding="10,0,0,10"
                                            ColumnDefinitions="Auto, Auto, Auto, Auto"
                                            HorizontalOptions="FillAndExpand"
                                            RowDefinitions="Auto, Auto"
                                            RowSpacing="0">
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="4"
                                                Margin="0"
                                                Padding="0"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                HorizontalOptions="Start"
                                                Text="Location"
                                                TextColor="#E0E0E0"
                                                VerticalOptions="End" />
                                            <Image
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="0"
                                                HeightRequest="20"
                                                HorizontalOptions="End"
                                                Source="location_icon.png"
                                                VerticalOptions="Center" />
                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0"
                                                Padding="0"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HorizontalOptions="Start"
                                                Text="{Binding Address.Country, StringFormat='{0}, '}"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="0"
                                                Padding="0"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HorizontalOptions="Start"
                                                Text="{Binding Address.City}"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                            <Button
                                                Grid.Row="1"
                                                Grid.Column="3"
                                                Margin="0"
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                Clicked="OnSeeLocationOnMapClicked"
                                                FontSize="14"
                                                HeightRequest="20"
                                                HorizontalOptions="Start"
                                                Text="▼"
                                                TextColor="White"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />
                                        </Grid>
                                    </Grid>
                                    <Grid
                                        Grid.Row="1"
                                        Margin="0"
                                        Padding="0"
                                        ColumnDefinitions="Auto, *"
                                        RowDefinitions="Auto">
                                        <Button
                                            x:Name="ReservationButton"
                                            Grid.Column="1"
                                            Margin="0"
                                            Padding="10,5"
                                            BackgroundColor="#5b5455"
                                            Clicked="ReservationButton_Clicked"
                                            CornerRadius="15"
                                            FontSize="20"
                                            HeightRequest="45"
                                            HorizontalOptions="FillAndExpand"
                                            Text="Make a reservation"
                                            TextColor="White"
                                            TextTransform="None"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Grid>
                            </Frame>
                        </StackLayout>
                    </Grid>

                    <Frame
                        Margin="0,0,0,0"
                        BackgroundColor="#0f1111"
                        CornerRadius="20">
                        <Frame
                            Margin="0,0,0,0"
                            Padding="0"
                            BackgroundColor="Transparent"
                            CornerRadius="20"
                            HasShadow="True"
                            HorizontalOptions="FillAndExpand">
                            <StackLayout Padding="0" Spacing="0">
                                <Frame
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    CornerRadius="20">
                                    <CarouselView
                                        x:Name="ImageCarousel"
                                        Margin="0"
                                        HeightRequest="200"
                                        HorizontalOptions="FillAndExpand"
                                        ItemsSource="{Binding ImageSourceList}"
                                        VerticalOptions="FillAndExpand">
                                        <CarouselView.ItemTemplate>
                                            <DataTemplate>
                                                <Image
                                                    Margin="0"
                                                    Aspect="AspectFill"
                                                    HorizontalOptions="FillAndExpand"
                                                    Source="{Binding .}"
                                                    VerticalOptions="FillAndExpand" />
                                            </DataTemplate>
                                        </CarouselView.ItemTemplate>
                                    </CarouselView>
                                </Frame>

                                <StackLayout
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    Spacing="30">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="34"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}"
                                        TextColor="#FF9800" />
                                    <Frame
                                        Padding="10"
                                        BackgroundColor="#6B5E5E"
                                        CornerRadius="20"
                                        HasShadow="True">
                                        <Label
                                            x:Name="DescriptionLabel"
                                            Padding="5"
                                            FontAttributes="None"
                                            FontSize="16"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="5"
                                            Text="{Binding LongDescription}"
                                            TextColor="White">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnLabelTapped" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Frame>

                                    <StackLayout BindableLayout.ItemsSource="{Binding GroupedFoods}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout Spacing="10">
                                                    <Frame
                                                        Margin="0,10,0,0"
                                                        Padding="5"
                                                        BackgroundColor="Transparent"
                                                        HasShadow="False">
                                                        <Label
                                                            FontAttributes="Bold"
                                                            FontSize="24"
                                                            Text="{Binding Key, StringFormat='{0}s'}"
                                                            TextColor="#FFFFFF"
                                                            TextDecorations="Underline" />
                                                    </Frame>
                                                    <StackLayout BindableLayout.ItemsSource="{Binding .}" Spacing="0">
                                                        <BindableLayout.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackLayout Spacing="0">
                                                                    <Frame
                                                                        Margin="0,5"
                                                                        Padding="8"
                                                                        BackgroundColor="#1A1A2C"
                                                                        CornerRadius="8"
                                                                        HasShadow="True"
                                                                        HeightRequest="120">
                                                                        <Frame.Background>
                                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                <GradientStop Offset="0.0" Color="#1A1A2C" />
                                                                                <GradientStop Offset="1.0" Color="#2D2D3D" />
                                                                            </LinearGradientBrush>
                                                                        </Frame.Background>
                                                                        <Frame.GestureRecognizers>
                                                                            <TapGestureRecognizer Tapped="OnItemTapped" />
                                                                        </Frame.GestureRecognizers>
                                                                        <Grid Padding="0" ColumnSpacing="8">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="130" />
                                                                                <ColumnDefinition Width="*" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <Grid Grid.Column="0">
                                                                                <Image
                                                                                    Aspect="AspectFill"
                                                                                    HeightRequest="120"
                                                                                    HorizontalOptions="FillAndExpand"
                                                                                    Source="{Binding ImageSource, FallbackValue='default_food.png'}"
                                                                                    VerticalOptions="Center" />
                                                                            </Grid>
                                                                            <StackLayout
                                                                                Grid.Column="1"
                                                                                Padding="5"
                                                                                Spacing="4"
                                                                                VerticalOptions="Center">
                                                                                <StackLayout Orientation="Horizontal" Spacing="5">
                                                                                    <Label
                                                                                        FontAttributes="Bold"
                                                                                        FontSize="12"
                                                                                        Text="{Binding Name}"
                                                                                        TextColor="#FFFFFF" />
                                                                                    <Label
                                                                                        FontSize="10"
                                                                                        Text="{Binding Quantity, StringFormat='({0})'}"
                                                                                        TextColor="#B0B0B0"
                                                                                        VerticalOptions="Center" />
                                                                                </StackLayout>
                                                                                <Label
                                                                                    FontSize="10"
                                                                                    LineBreakMode="TailTruncation"
                                                                                    MaxLines="2"
                                                                                    Text="{Binding Description}"
                                                                                    TextColor="#B0B0B0" />
                                                                                <StackLayout Orientation="Horizontal" Spacing="5">
                                                                                    <Grid
                                                                                        ColumnDefinitions="Auto,Auto"
                                                                                        HorizontalOptions="Start"
                                                                                        VerticalOptions="Center">
                                                                                        <Label
                                                                                            Grid.Column="0"
                                                                                            FontAttributes="Bold"
                                                                                            FontSize="16"
                                                                                            Text="{Binding Price, StringFormat='{0:F2} €', FallbackValue='0.00 €'}"
                                                                                            TextColor="{DynamicResource PrimaryColor}">
                                                                                            <Label.Triggers>
                                                                                                <DataTrigger
                                                                                                    Binding="{Binding DiscountedPrice, Converter={StaticResource IsPositiveConverter}, FallbackValue=False}"
                                                                                                    TargetType="Label"
                                                                                                    Value="True">
                                                                                                    <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                                                    <Setter Property="TextColor" Value="{DynamicResource SecondaryTextColor}" />
                                                                                                </DataTrigger>
                                                                                            </Label.Triggers>
                                                                                        </Label>
                                                                                        <Label
                                                                                            Grid.Column="1"
                                                                                            Margin="5,0,0,0"
                                                                                            FontAttributes="Bold"
                                                                                            FontSize="14"
                                                                                            IsVisible="{Binding DiscountedPrice, Converter={StaticResource IsPositiveConverter}, FallbackValue=False}"
                                                                                            Text="{Binding DiscountedPrice, StringFormat='{0:F2} €', FallbackValue='0.00 €'}"
                                                                                            TextColor="#FFCA28" />
                                                                                    </Grid>
                                                                                    <StackLayout
                                                                                        Orientation="Horizontal"
                                                                                        Spacing="2"
                                                                                        VerticalOptions="Center">
                                                                                        <Image
                                                                                            HeightRequest="12"
                                                                                            Source="star_filled.png"
                                                                                            VerticalOptions="Center"
                                                                                            WidthRequest="12" />
                                                                                        <Label
                                                                                            FontSize="10"
                                                                                            Text="{Binding Rating}"
                                                                                            TextColor="#FFD700"
                                                                                            VerticalOptions="Center" />
                                                                                    </StackLayout>
                                                                                </StackLayout>
                                                                            </StackLayout>
                                                                        </Grid>
                                                                    </Frame>
                                                                    <BoxView
                                                                        Margin="10,5,10,0"
                                                                        BackgroundColor="#B0B0B0"
                                                                        HeightRequest="1"
                                                                        HorizontalOptions="FillAndExpand"
                                                                        Opacity="0.3" />
                                                                </StackLayout>
                                                            </DataTemplate>
                                                        </BindableLayout.ItemTemplate>
                                                    </StackLayout>
                                                </StackLayout>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </Frame>
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>