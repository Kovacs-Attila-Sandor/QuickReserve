<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.RestaurantDetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:QuickReserve.Controls"
    BackgroundColor="#2C2C2C"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#1A1A1A" />
            <GradientStop Offset="1.0" Color="#2D2D2D" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <ScrollView
                Grid.Row="0"
                Margin="0"
                Padding="0">
                <StackLayout Padding="0" Spacing="0">
                    <Grid
                        Margin="0"
                        Padding="0"
                        BackgroundColor="Transparent"
                        ColumnDefinitions="Auto"
                        RowDefinitions="Auto">
                        <StackLayout
                            Padding="0"
                            HorizontalOptions="FillAndExpand"
                            Spacing="10"
                            VerticalOptions="CenterAndExpand">
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                CornerRadius="10"
                                HasShadow="True"
                                HorizontalOptions="FillAndExpand">
                                <Grid
                                    Margin="0"
                                    RowDefinitions="Auto"
                                    RowSpacing="0">

                                    <Grid
                                        Grid.Row="0"
                                        Margin="0"
                                        ColumnDefinitions="Auto, *"
                                        HorizontalOptions="FillAndExpand"
                                        RowDefinitions="Auto">

                                        <ImageButton
                                            BackgroundColor="Transparent"
                                            Clicked="OnBackButtonClicked"
                                            Source="back_icon.png"
                                            WidthRequest="40" />

                                        <Grid
                                            Grid.Column="1"
                                            Padding="10,0,0,10"
                                            ColumnDefinitions="Auto, Auto, Auto, Auto"
                                            HorizontalOptions="FillAndExpand"
                                            RowDefinitions="Auto, Auto"
                                            RowSpacing="0">

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="4"
                                                Margin="0"
                                                Padding="0"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                HorizontalOptions="Start"
                                                Text="Location"
                                                TextColor="#E0E0E0"
                                                VerticalOptions="End" />

                                            <Image
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="0"
                                                HeightRequest="20"
                                                HorizontalOptions="End"
                                                Source="location_icon.png"
                                                VerticalOptions="Center" />

                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0"
                                                Padding="0"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HorizontalOptions="Start"
                                                Text="{Binding Address.Country, StringFormat='{0}, '}"
                                                TextColor="White"
                                                VerticalOptions="Center" />

                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="0"
                                                Padding="0"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HorizontalOptions="Start"
                                                Text="{Binding Address.City}"
                                                TextColor="White"
                                                VerticalOptions="Center" />

                                            <Button
                                                Grid.Row="1"
                                                Grid.Column="3"
                                                Margin="0"
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                Clicked="OnDatePickerClicked"
                                                FontSize="14"
                                                HeightRequest="20"
                                                HorizontalOptions="Start"
                                                Text="▼"
                                                TextColor="White"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />
                                        </Grid>
                                    </Grid>

                                    <Grid
                                        Grid.Row="1"
                                        Margin="0"
                                        Padding="0"
                                        ColumnDefinitions="Auto, *"
                                        RowDefinitions="Auto">
                                        <Button
                                            x:Name="ReservationButton"
                                            Grid.Column="1"
                                            Margin="0"
                                            Padding="10,5"
                                            BackgroundColor="#5b5455"
                                            CornerRadius="15"
                                            FontSize="20"
                                            HeightRequest="45"
                                            HorizontalOptions="FillAndExpand"
                                            Text="Make a reservation"
                                            TextColor="White"
                                            TextTransform="None"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Grid>
                            </Frame>
                        </StackLayout>
                    </Grid>

                    <Frame
                        Margin="0,0,0,0"
                        BackgroundColor="#0f1111"
                        CornerRadius="20">
                        <Frame
                            Margin="0,0,0,0"
                            Padding="0"
                            BackgroundColor="Transparent"
                            CornerRadius="20"
                            HasShadow="True"
                            HorizontalOptions="FillAndExpand">
                            <StackLayout Padding="0" Spacing="0">
                                <Frame
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    CornerRadius="20">
                                    <CarouselView
                                        x:Name="ImageCarousel"
                                        Margin="0"
                                        HeightRequest="200"
                                        HorizontalOptions="FillAndExpand"
                                        ItemsSource="{Binding ImageSourceList}"
                                        VerticalOptions="FillAndExpand">
                                        <CarouselView.ItemTemplate>
                                            <DataTemplate>
                                                <Image
                                                    Margin="0"
                                                    Aspect="AspectFill"
                                                    HorizontalOptions="FillAndExpand"
                                                    Source="{Binding .}"
                                                    VerticalOptions="FillAndExpand" />
                                            </DataTemplate>
                                        </CarouselView.ItemTemplate>
                                    </CarouselView>
                                </Frame>
                                <StackLayout
                                    Padding="10"
                                    BackgroundColor="Transparent"
                                    Spacing="30">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="34"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}"
                                        TextColor="#FF9800" />
                                    <Frame
                                        Padding="10"
                                        BackgroundColor="#6B5E5E"
                                        CornerRadius="20"
                                        HasShadow="True">
                                        <Label
                                            x:Name="DescriptionLabel"
                                            Padding="5"
                                            FontAttributes="None"
                                            FontSize="16"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="5"
                                            Text="{Binding LongDescription}"
                                            TextColor="White">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnLabelTapped" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Frame>

                                    <Frame
                                        Margin="0"
                                        Padding="10"
                                        BackgroundColor="Transparent"
                                        CornerRadius="0">
                                        <ScrollView
                                            HorizontalOptions="FillAndExpand"
                                            HorizontalScrollBarVisibility="Never"
                                            Orientation="Horizontal"
                                            VerticalOptions="Center">
                                            <StackLayout
                                                Padding="0"
                                                Orientation="Horizontal"
                                                Spacing="15">

                                                <Label
                                                    FontSize="20"
                                                    Text="Main courses"
                                                    TextColor="White" />
                                                <Label
                                                    FontSize="20"
                                                    Text="Drinks"
                                                    TextColor="White" />
                                                <Label
                                                    FontSize="20"
                                                    Text="Desserts"
                                                    TextColor="White" />
                                                <Label
                                                    FontSize="20"
                                                    Text="Others"
                                                    TextColor="White" />
                                            </StackLayout>
                                        </ScrollView>
                                    </Frame>
                                </StackLayout>
                                <StackLayout Padding="15" Spacing="20">
                                    <CollectionView
                                        BackgroundColor="Transparent"
                                        HeightRequest="220"
                                        HorizontalOptions="FillAndExpand"
                                        ItemsSource="{Binding Foods}">

                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout ItemSpacing="15" Orientation="Horizontal" />
                                        </CollectionView.ItemsLayout>

                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame
                                                    Margin="10,0"
                                                    Padding="0"
                                                    BackgroundColor="#2A2E33"
                                                    CornerRadius="20"
                                                    HasShadow="True"
                                                    HeightRequest="220"
                                                    WidthRequest="180">

                                                    <Grid Padding="0" RowSpacing="8">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="110" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <Grid Grid.Row="0">
                                                            <Image
                                                                Aspect="AspectFill"
                                                                HorizontalOptions="FillAndExpand"
                                                                Source="{Binding ImageSource}"
                                                                VerticalOptions="FillAndExpand" />
                                                            <ImageButton
                                                                Margin="0,8,8,0"
                                                                Aspect="AspectFit"
                                                                BackgroundColor="Transparent"
                                                                Clicked="OnHeartClicked"
                                                                HeightRequest="45"
                                                                HorizontalOptions="End"
                                                                Source="not_filled_heart_icon.png"
                                                                VerticalOptions="Start"
                                                                WidthRequest="45" />
                                                        </Grid>

                                                        <StackLayout
                                                            Grid.Row="1"
                                                            Padding="10"
                                                            Spacing="5">
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="16"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding Name}"
                                                                TextColor="#FFFFFF" />
                                                            <Label
                                                                FontSize="12"
                                                                HorizontalOptions="StartAndExpand"
                                                                LineBreakMode="TailTruncation"
                                                                MaxLines="2"
                                                                Text="{Binding Description}"
                                                                TextColor="#B0B0B0" />

                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <Label
                                                                    Grid.Column="0"
                                                                    FontAttributes="Bold"
                                                                    FontSize="14"
                                                                    Text="{Binding Price, StringFormat='€{0:F2}'}"
                                                                    TextColor="#4CAF50"
                                                                    VerticalOptions="Center" />

                                                                <StackLayout
                                                                    Grid.Column="1"
                                                                    Orientation="Horizontal"
                                                                    Spacing="5">
                                                                    <Image
                                                                        HeightRequest="18"
                                                                        Source="rating_icon.png"
                                                                        VerticalOptions="Center"
                                                                        WidthRequest="18" />
                                                                    <Label
                                                                        FontSize="14"
                                                                        Text="{Binding Rating}"
                                                                        TextColor="#FFB300"
                                                                        VerticalOptions="Center" />
                                                                </StackLayout>
                                                            </Grid>
                                                        </StackLayout>
                                                    </Grid>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </Frame>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>