<ContentPage
    x:Class="QuickReserve.Views.RestaurantViews.RestaurantViewMenuPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuickReserve.Views.RestaurantViews"
    Title="Menu"
    BackgroundColor="#1C1C1C"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#BB86FC</Color>
            <Color x:Key="PrimaryLightColor">#D1B4F9</Color>
            <Color x:Key="ErrorColor">#CF6679</Color>
            <Color x:Key="SurfaceColor">#2A2A2A</Color>
            <Color x:Key="SurfaceLightColor">#383838</Color>
            <Color x:Key="OnSurfaceColor">#FFFFFF</Color>
            <Color x:Key="SecondaryTextColor">#B0B0B0</Color>

            <!--  Card Title Style  -->
            <Style x:Key="CardTitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{DynamicResource PrimaryColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,20,0,10" />
            </Style>

            <!--  Primary Button Style (for Add New Item)  -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="10,10,10,20" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.95" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <!--  Action Button Style (for Edit and Delete)  -->
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceLightColor}" />
                <Setter Property="TextColor" Value="{DynamicResource OnSurfaceColor}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="WidthRequest" Value="100" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.95" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <!--  SearchBar Style  -->
            <Style x:Key="SearchBarStyle" TargetType="SearchBar">
                <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
                <Setter Property="TextColor" Value="{DynamicResource OnSurfaceColor}" />
                <Setter Property="PlaceholderColor" Value="{DynamicResource SecondaryTextColor}" />
                <Setter Property="CancelButtonColor" Value="{DynamicResource PrimaryColor}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="Margin" Value="10,5,10,10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15" Spacing="10">
                <!--  Header with Back Button and Title  -->
                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                    <!--  Back Button (Left)  -->
                    <ImageButton
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        Clicked="OnCancelClicked"
                        HorizontalOptions="Start"
                        Source="back_icon.png"
                        WidthRequest="40" />

                    <!--  Centered Title  -->
                    <Label
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        FontAttributes="Bold"
                        FontSize="28"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Menu"
                        TextColor="White"
                        VerticalOptions="Center" />
                </Grid>

                <!--  Search Bar  -->
                <Frame
                    Margin="10"
                    Padding="0"
                    BackgroundColor="Transparent"
                    CornerRadius="10">
                    <SearchBar
                        x:Name="FoodSearchBar"
                        Margin="0"
                        BackgroundColor="#2C2C2C"
                        Placeholder="Search menu items..."
                        Style="{StaticResource SearchBarStyle}"
                        TextChanged="OnSearchTextChanged" />
                </Frame>

                <!--  Add New Food Button  -->
                <Button
                    Clicked="OnAddNewFoodClicked"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Text="Add New Item" />

                <!--  Menu Items  -->
                <CollectionView x:Name="FoodCollectionView" ItemsSource="{Binding .}">
                    <CollectionView.Header>
                        <Label
                            Margin="0,10,0,10"
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="MENU ITEMS"
                            TextColor="{DynamicResource PrimaryLightColor}" />
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0,0,0,15"
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="{DynamicResource SurfaceLightColor}"
                                CornerRadius="12"
                                HasShadow="True">

                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                    <!--  Food Card  -->
                                    <Frame
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Padding="12"
                                        BackgroundColor="{DynamicResource SurfaceColor}"
                                        CornerRadius="12"
                                        HasShadow="False">
                                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                            <!--  Food Image  -->
                                            <Image
                                                Grid.RowSpan="4"
                                                Grid.Column="0"
                                                Margin="0,0,12,0"
                                                Aspect="AspectFill"
                                                HeightRequest="70"
                                                Source="{Binding ImageSource, FallbackValue='default_food.png'}"
                                                WidthRequest="70" />

                                            <!--  Food Name  -->
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                Text="{Binding Name}"
                                                TextColor="{DynamicResource OnSurfaceColor}"
                                                VerticalOptions="Center" />

                                            <!--  Food Description  -->
                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,4,0,0"
                                                FontSize="14"
                                                LineBreakMode="WordWrap"
                                                Text="{Binding Description}"
                                                TextColor="{DynamicResource SecondaryTextColor}" />

                                            <!--  Food Category  -->
                                            <Label
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="0,4,0,0"
                                                FontSize="12"
                                                Text="{Binding Category}"
                                                TextColor="{DynamicResource PrimaryLightColor}" />

                                            <!--  Food Price  -->
                                            <Label
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                Text="{Binding Price, StringFormat='{0} €'}"
                                                TextColor="{DynamicResource PrimaryColor}"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </Frame>

                                    <!--  Action Buttons  -->
                                    <StackLayout
                                        Grid.Column="1"
                                        Margin="10,0,10,10"
                                        Orientation="Vertical"
                                        Spacing="10"
                                        VerticalOptions="EndAndExpand">
                                        <Button
                                            BackgroundColor="{DynamicResource PrimaryLightColor}"
                                            Clicked="OnEditFoodClicked"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Text="Edit" />
                                        <Button
                                            BackgroundColor="{DynamicResource ErrorColor}"
                                            Clicked="OnDeleteFoodClicked"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Text="Delete"
                                            TextColor="White" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>