<ContentPage
    x:Class="QuickReserve.Views.RestaurantProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:QuickReserve.Converter"
    Title="Restaurant Profile"
    Visual="Material">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#1A1A1A" />
            <GradientStop Offset="1.0" Color="#2D2D2D" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#BB86FC</Color>
            <Color x:Key="PrimaryButtonColor">#636363</Color>
            <Color x:Key="SurfaceColor">#1E1E1E</Color>
            <Color x:Key="OnSurfaceColor">#FFFFFF</Color>
            <Color x:Key="DividerColor">#383838</Color>
            <Color x:Key="ErrorColor">#CF6679</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>

            <!--  Loading Indicator  -->
            <ActivityIndicator
                x:Name="loadingIndicator"
                HorizontalOptions="Center"
                IsRunning="True"
                IsVisible="True"
                VerticalOptions="Center"
                Color="#1abc9c" />

            <ScrollView>
                <StackLayout
                    Padding="20"
                    Spacing="20"
                    VerticalOptions="Start">

                    <!--  Restaurant Content  -->
                    <StackLayout
                        x:Name="contentLayout"
                        IsVisible="False"
                        Spacing="20">

                        <!--  Restaurant Header  -->
                        <StackLayout HorizontalOptions="Center" Spacing="15">
                            <!--  Restaurant Image  -->
                            <Frame
                                Padding="0"
                                BackgroundColor="{DynamicResource SurfaceColor}"
                                CornerRadius="10"
                                HasShadow="True"
                                HeightRequest="180"
                                HorizontalOptions="Center"
                                WidthRequest="180">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="180"
                                    Source="{Binding ImageSourceUri}"
                                    WidthRequest="180" />
                            </Frame>

                            <!--  Name  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="{Binding Name}"
                                TextColor="{DynamicResource OnSurfaceColor}" />
                        </StackLayout>

                        <!--  Quick Info Cards  -->
                        <Grid
                            ColumnDefinitions="*,*"
                            ColumnSpacing="10"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="10">
                            <!--  Contact Card  -->
                            <Frame
                                Grid.Row="0"
                                Grid.Column="0"
                                Padding="15"
                                BackgroundColor="{DynamicResource SurfaceColor}"
                                CornerRadius="10"
                                HasShadow="True">
                                <StackLayout Spacing="8">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="Contact"
                                        TextColor="{DynamicResource PrimaryColor}" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding PhoneNumber}"
                                        TextColor="{DynamicResource OnSurfaceColor}" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding Email}"
                                        TextColor="{DynamicResource OnSurfaceColor}" />
                                </StackLayout>
                            </Frame>

                            <!--  Address Card  -->
                            <Frame
                                Grid.Row="0"
                                Grid.Column="1"
                                Padding="15"
                                BackgroundColor="{DynamicResource SurfaceColor}"
                                CornerRadius="10"
                                HasShadow="True">
                                <StackLayout Spacing="8">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="Address"
                                        TextColor="{DynamicResource PrimaryColor}" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding Address.City}"
                                        TextColor="{DynamicResource OnSurfaceColor}" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding Address.Street}"
                                        TextColor="{DynamicResource OnSurfaceColor}" />
                                </StackLayout>
                            </Frame>

                            <!--  Description Card  -->
                            <Frame
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Padding="15"
                                BackgroundColor="{DynamicResource SurfaceColor}"
                                CornerRadius="10"
                                HasShadow="True">
                                <StackLayout Spacing="8">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="Description"
                                        TextColor="{DynamicResource PrimaryColor}" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding ShortDescription}"
                                        TextColor="{DynamicResource OnSurfaceColor}" />
                                </StackLayout>
                            </Frame>
                        </Grid>

                        <!--  Section Navigation Buttons  -->
                        <StackLayout Spacing="10">
                            <!--  Hours Button  -->
                            <Button
                                BackgroundColor="{DynamicResource PrimaryButtonColor}"
                                Clicked="OnHoursButtonClicked"
                                CornerRadius="5"
                                HeightRequest="50"
                                HorizontalOptions="Fill"
                                Text="Opening Hours"
                                TextColor="{DynamicResource OnSurfaceColor}"
                                Visual="Material" />

                            <!--  Menu Button  -->
                            <Button
                                BackgroundColor="{DynamicResource PrimaryButtonColor}"
                                Clicked="OnMenuButtonClicked"
                                CornerRadius="5"
                                HeightRequest="50"
                                HorizontalOptions="Fill"
                                Text="Menu"
                                TextColor="{DynamicResource OnSurfaceColor}"
                                Visual="Material" />

                            <Button
                                BackgroundColor="{DynamicResource PrimaryButtonColor}"
                                Clicked="OnUpdateRestaurantInfoClicked"
                                CornerRadius="5"
                                HeightRequest="50"
                                HorizontalOptions="Fill"
                                Text="Update Info"
                                TextColor="{DynamicResource OnSurfaceColor}"
                                Visual="Material" />

                            <Button
                                BackgroundColor="Transparent"
                                BorderColor="{DynamicResource ErrorColor}"
                                BorderWidth="1"
                                Clicked="OnLogoutClicked"
                                CornerRadius="5"
                                HeightRequest="48"
                                Text="LOGOUT"
                                TextColor="{DynamicResource ErrorColor}"
                                Visual="Material" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>