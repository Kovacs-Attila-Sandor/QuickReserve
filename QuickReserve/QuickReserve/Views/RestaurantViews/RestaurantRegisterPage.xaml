<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuickReserve.Views.RestaurantRegisterPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="#0D0D0D"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Fixált cím a képernyő tetején  -->
            <Label
                Grid.Row="0"
                Margin="0,40,0,40"
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="Register Your Restaurant"
                TextColor="#E0E0E0" />
            <!--  Cím az első sorban  -->

            <!--  Görgethető tartalom  -->
            <ScrollView Grid.Row="1">
                <StackLayout
                    Margin="5"
                    Padding="0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">

                    <Frame
                        Margin="15"
                        Padding="25"
                        BackgroundColor="#1A1A1A"
                        CornerRadius="20"
                        HasShadow="True">

                        <StackLayout Spacing="20">

                            <!--  Beviteli mezők  -->
                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtUsername"
                                    BackgroundColor="Transparent"
                                    Placeholder="Username"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtEmail"
                                    BackgroundColor="Transparent"
                                    Placeholder="Email"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtPassword"
                                    BackgroundColor="Transparent"
                                    IsPassword="True"
                                    Placeholder="Password"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtConfirmPassword"
                                    BackgroundColor="Transparent"
                                    IsPassword="True"
                                    Placeholder="Confirm Password"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <!--  Telefon és cím adatok  -->
                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtPhonenum"
                                    BackgroundColor="Transparent"
                                    Placeholder="Phone Number"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtCountry"
                                    BackgroundColor="Transparent"
                                    Placeholder="Country"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtCity"
                                    BackgroundColor="Transparent"
                                    Placeholder="City"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtStreet"
                                    BackgroundColor="Transparent"
                                    Placeholder="Street"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtNumber"
                                    BackgroundColor="Transparent"
                                    Placeholder="Street Number"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <!--  Leírások  -->
                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtShortDescription"
                                    BackgroundColor="Transparent"
                                    Placeholder="Short Description"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <Frame
                                Padding="5"
                                BackgroundColor="#292929"
                                CornerRadius="15"
                                HasShadow="False">
                                <Entry
                                    x:Name="txtLongDescription"
                                    BackgroundColor="Transparent"
                                    Placeholder="Long Description"
                                    PlaceholderColor="#A0A0A0"
                                    TextColor="#FFFFFF" />
                            </Frame>

                            <!--  Kép feltöltés  -->
                            <Button
                                Margin="0,10"
                                BackgroundColor="#6200EE"
                                Clicked="PickImageButton_Clicked"
                                CornerRadius="30"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="Pick an Image"
                                TextColor="#FFFFFF"
                                WidthRequest="350" />

                            <!--  Képek előnézete  -->
                            <CollectionView
                                x:Name="ImagePreviewCollection"
                                Margin="0,20,0,0"
                                ItemsSource="{Binding}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Image
                                            Margin="10"
                                            HeightRequest="100"
                                            Source="{Binding}"
                                            WidthRequest="100" />
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <!--  Regisztráció gomb  -->
                            <Button
                                Margin="0,10"
                                BackgroundColor="#6200EE"
                                Clicked="GoToAddMenuPage"
                                CornerRadius="30"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="Register as Restaurant"
                                TextColor="#FFFFFF"
                                WidthRequest="350" />

                            <!--  Vissza a bejelentkezéshez  -->
                            <Button
                                Margin="0,10"
                                BackgroundColor="#444444"
                                Clicked="GoToLoginPage"
                                CornerRadius="30"
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Center"
                                Text="Back to Login"
                                TextColor="#FFFFFF"
                                WidthRequest="350" />

                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
