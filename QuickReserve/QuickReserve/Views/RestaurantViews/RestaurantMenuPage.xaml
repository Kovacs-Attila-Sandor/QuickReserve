<ContentPage
    x:Class="QuickReserve.Views.RestaurantMenuPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Restaurant Menu"
    NavigationPage.HasNavigationBar="False">

    <ScrollView Padding="0,3">
        <StackLayout>
            <Grid Padding="10,10,10,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Vissza gomb bal oldalon  -->
                <ImageButton
                    Grid.Column="0"
                    Padding="0"
                    BackgroundColor="Transparent"
                    Clicked="OnBackButtonClicked"
                    HeightRequest="40"
                    Source="back_icon.png"
                    VerticalOptions="Center" />

                <!--  Cím középen  -->
                <Label
                    Grid.Column="1"
                    Margin="20,0"
                    Padding="0"
                    FontAttributes="Bold"
                    FontSize="28"
                    Text="Restaurant Menu"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
            <StackLayout Padding="0,10" Spacing="20">
                <StackLayout.Background>
                    <LinearGradientBrush>
                        <GradientStop Offset="0.0" Color="#1A1A1A" />
                        <GradientStop Offset="1.0" Color="#2D2D2D" />
                    </LinearGradientBrush>
                </StackLayout.Background>
                <!--  Előrendelés gomb  -->
                <Button
                    Margin="10,3,10,3"
                    BackgroundColor="#f39c12"
                    Clicked="OnNoPreOrderClicked"
                    CornerRadius="8"
                    Text="I don't want to pre-order"
                    TextColor="White"
                    VerticalOptions="End" />

                <!--  Az étterem képe  -->
                <Frame
                    Margin="10,0,10,5"
                    Padding="0"
                    BorderColor="White"
                    CornerRadius="20"
                    HasShadow="True">
                    <Image
                        x:Name="RestaurantImage"
                        Aspect="AspectFill"
                        HeightRequest="250"
                        Source="{Binding ImageSourceUri}"
                        WidthRequest="350" />
                </Frame>

                <!--  Kategória gombok  -->
                <ScrollView Padding="0" Orientation="Horizontal">
                    <StackLayout
                        Padding="10"
                        HorizontalOptions="Start"
                        Orientation="Horizontal"
                        Spacing="15"
                        VerticalOptions="Center">
                        <Button
                            Padding="12"
                            BackgroundColor="Transparent"
                            BorderColor="#3498db"
                            BorderWidth="2"
                            Clicked="OnCategorySelected"
                            CornerRadius="5"
                            FontSize="16"
                            HeightRequest="45"
                            Text="All"
                            TextColor="#3498db" />
                        <Button
                            Padding="12"
                            BackgroundColor="Transparent"
                            BorderColor="#3498db"
                            BorderWidth="2"
                            Clicked="OnCategorySelected"
                            CornerRadius="5"
                            FontSize="16"
                            HeightRequest="45"
                            Text="Main Courses"
                            TextColor="#3498db" />
                        <Button
                            Padding="12"
                            BackgroundColor="Transparent"
                            BorderColor="#3498db"
                            BorderWidth="2"
                            Clicked="OnCategorySelected"
                            CornerRadius="5"
                            FontSize="16"
                            HeightRequest="45"
                            Text="Drinks"
                            TextColor="#3498db" />
                        <Button
                            Padding="12"
                            BackgroundColor="Transparent"
                            BorderColor="#3498db"
                            BorderWidth="2"
                            Clicked="OnCategorySelected"
                            CornerRadius="5"
                            FontSize="16"
                            HeightRequest="45"
                            Text="Desserts"
                            TextColor="#3498db" />
                    </StackLayout>
                </ScrollView>

                <Button
                    Margin="10,3,10,3"
                    Padding="12"
                    BackgroundColor="#3498db"
                    Clicked="OnViewOrderClicked"
                    CornerRadius="8"
                    HeightRequest="45"
                    Text="View Order"
                    TextColor="White"
                    VerticalOptions="End" />

                <!--  ListView csoportosítással és ItemTapped eseménnyel  -->
                <Frame
                    Margin="0,10"
                    Padding="10"
                    BackgroundColor="#0f1111"
                    BorderColor="Black"
                    CornerRadius="10"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start">
                    <ListView
                        x:Name="MenuListView"
                        GroupDisplayBinding="{Binding Key, StringFormat='{0}s'}"
                        HasUnevenRows="True"
                        IsGroupingEnabled="True"
                        ItemTapped="OnItemTapped"
                        ItemsSource="{Binding GroupedFoods}">
                        <ListView.GroupHeaderTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame
                                        Margin="0,10,0,0"
                                        Padding="5"
                                        BackgroundColor="Transparent"
                                        HasShadow="False">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="24"
                                            Text="{Binding Key, StringFormat='{0}s'}"
                                            TextColor="#FFFFFF" />
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.GroupHeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame
                                        Margin="0,5"
                                        Padding="0"
                                        BackgroundColor="#2D2D2D"
                                        CornerRadius="20"
                                        HasShadow="True"
                                        HeightRequest="120">
                                        <Frame.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0.0" Color="#1A1A1A" />
                                                <GradientStop Offset="1.0" Color="#2D2D2D" />
                                            </LinearGradientBrush>
                                        </Frame.Background>
                                        <Grid Padding="0" ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Kép rész (bal oldalon)  -->
                                            <Grid Grid.Column="0">
                                                <Frame
                                                    Padding="0"
                                                    BackgroundColor="Transparent"
                                                    CornerRadius="15">
                                                    <Image
                                                        Aspect="AspectFill"
                                                        HeightRequest="120"
                                                        HorizontalOptions="FillAndExpand"
                                                        Source="{Binding ImageSource}"
                                                        VerticalOptions="Center" />
                                                </Frame>
                                            </Grid>

                                            <!--  Szöveges rész (jobb oldalon)  -->
                                            <StackLayout
                                                Grid.Column="1"
                                                Padding="5"
                                                Spacing="2"
                                                VerticalOptions="Center">
                                                <StackLayout Orientation="Horizontal" Spacing="5">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="12"
                                                        Text="{Binding Name}"
                                                        TextColor="#FFFFFF" />
                                                    <Label
                                                        FontSize="10"
                                                        Text="{Binding Quantity, StringFormat='({0})'}"
                                                        TextColor="#B0B0B0"
                                                        VerticalOptions="Center" />
                                                </StackLayout>
                                                <Label
                                                    FontSize="10"
                                                    LineBreakMode="TailTruncation"
                                                    MaxLines="2"
                                                    Text="{Binding Description}"
                                                    TextColor="#B0B0B0" />
                                                <StackLayout Orientation="Horizontal" Spacing="5">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="10"
                                                        Text="{Binding Price, StringFormat='{0} €'}"
                                                        TextColor="#4CAF50" />
                                                </StackLayout>
                                                <Button
                                                    Padding="12"
                                                    BackgroundColor="#28a745"
                                                    Clicked="OnAddToOrderClicked"
                                                    CornerRadius="10"
                                                    HeightRequest="45"
                                                    HorizontalOptions="EndAndExpand"
                                                    Text="Add"
                                                    TextColor="White"
                                                    VerticalOptions="End"
                                                    WidthRequest="90" />
                                            </StackLayout>
                                        </Grid>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>