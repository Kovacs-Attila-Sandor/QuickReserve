<ContentPage
    x:Class="QuickReserve.Views.RestaurantLayoutPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#6200EE" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="WidthRequest" Value="120" />
            </Style>
            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#2A2A2A" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="15" />
            </Style>
            <Style x:Key="PickerStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#3A3A3A" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="BorderColor" Value="Black" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout>
            <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#121212" />
                        <GradientStop Offset="0.5" Color="#282828" />
                        <GradientStop Offset="1" Color="#3f3f3f" />
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>

            <!--  Tartalom  -->
            <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                <StackLayout
                    Margin="20"
                    Spacing="25"
                    VerticalOptions="CenterAndExpand">
                    <StackLayout x:Name="Buttons">
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                            <ImageButton
                                Grid.Row="0"
                                Grid.Column="0"
                                BackgroundColor="Transparent"
                                Clicked="GoToAboutPage"
                                Source="back_icon.png"
                                WidthRequest="40" />
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                FontAttributes="Bold"
                                FontSize="28"
                                HorizontalOptions="Center"
                                Text="Restaurant Layout"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Grid>

                        <Frame Style="{StaticResource FrameStyle}">
                            <StackLayout
                                HorizontalOptions="CenterAndExpand"
                                Orientation="Vertical"
                                Spacing="15">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="Center"
                                    Text="Please select a date and time"
                                    TextColor="White" />
                                <StackLayout
                                    HorizontalOptions="Center"
                                    Orientation="Horizontal"
                                    Spacing="15">
                                    <Frame Style="{StaticResource PickerStyle}">
                                        <DatePicker
                                            x:Name="reservationDatePicker"
                                            Date="{x:Static sys:DateTime.Now}"
                                            FontSize="16"
                                            HorizontalOptions="FillAndExpand"
                                            MaximumDate="{x:Static sys:DateTime.MaxValue}"
                                            MinimumDate="{x:Static sys:DateTime.Now}"
                                            TextColor="#E0E0E0" />
                                    </Frame>
                                    <Frame Style="{StaticResource PickerStyle}">
                                        <TimePicker
                                            x:Name="reservationTimePicker"
                                            FontSize="16"
                                            Format="HH:mm"
                                            HorizontalOptions="FillAndExpand"
                                            TextColor="#E0E0E0"
                                            Time="{Binding Time, Mode=TwoWay}" />
                                    </Frame>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </StackLayout>

                    <Frame Style="{StaticResource FrameStyle}">
                        <Grid
                            x:Name="DynamicGrid"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand" />
                    </Frame>

                    <StackLayout
                        x:Name="ConfirmButton"
                        Margin="0"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        Spacing="20"
                        VerticalOptions="FillAndExpand">

                        <Button
                            Margin="0,0,0,20"
                            BackgroundColor="#6200EE"
                            Clicked="ConfirmButtonClicked"
                            CornerRadius="25"
                            FontAttributes="Bold"
                            FontSize="16"
                            HeightRequest="50"
                            HorizontalOptions="FillAndExpand"
                            Text="Confirm"
                            TextColor="White" />
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <!--  Betöltés overlay  -->
            <ContentView
                x:Name="LoadingOverlay"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                BackgroundColor="#1A1A2E"
                IsVisible="False"
                Opacity="0.7">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <ActivityIndicator
                        x:Name="LoadingIndicator"
                        HeightRequest="60"
                        IsRunning="True"
                        WidthRequest="60"
                        Color="#6200EE" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="Loading..."
                        TextColor="White" />
                </StackLayout>
            </ContentView>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>